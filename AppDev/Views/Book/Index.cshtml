@model List<Book>
<partial name="_Notification" />
<h1>Here is a list of Book</h1>
<a asp-controller="Book" asp-action="Create" class="btn btn-primary">Create Book</a>
<table class="table table-bordered">
	<thead>
		<tr>
			<td>Title</td>
			<td>Description</td>
			<td>Author</td>
			<td>Price</td>
			<td>Category</td>
		</tr>
	</thead>
	<tbody>
		@foreach (var book in Model)
		{
			<tr>
				<td>@book.Title</td>
				<td>@book.Description</td>
				<td>@book.Author</td>
				<td>@book.Price</td>
				<td>@book.Category</td>
				<td>
					<a asp-controller="Category" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-primary">Edit</a>
					<a asp-controller="Category" asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger">Delete</a>
				</td>
			</tr>
		}
	</tbody>

</table>