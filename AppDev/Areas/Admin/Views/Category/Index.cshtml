@model List<Category>
<partial name="_Notification" />
<h1>Here is a list of Category</h1>
<a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create Category</a>
<table class="table table-bordered">
	<thead>
		<tr>
			<td>Name</td>
			<td>Description</td>
			<td>Display Order</td>
		</tr>
	</thead>
	<tbody>
		@foreach (var category in Model)
		{
			<tr>
				<td>@category.Name</td>
				<td>@category.Description</td>
				<td>@category.DisplayOrder</td>
				<td>
					<a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">Edit</a>
					<a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
				</td>
			</tr>
		}
	</tbody>
	
</table>